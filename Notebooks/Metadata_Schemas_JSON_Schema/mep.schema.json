{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/mep.schema.json",
    "title": "Minimum Energy Path",
    "openBISCode": "MEP",
    "description": "Minimum Energy Path schema",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "wfms_uuid": {
            "title": "WFMS UUID",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Unique identifier of the simulation object in the WFMS",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "wfms_url": {
            "title": "WFMS URL",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Link to WFMS",
            "pattern": "(https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|www\\.[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9]+\\.[^\\s]{2,}|www\\.[a-zA-Z0-9]+\\.[^\\s]{2,})"
        },
        "method_type": {
            "title": "Method type",
            "type": "string",
            "openBISType": "CONTROLLEDVOCABULARY",
            "description": "Whether NEB, string method, or series of constrained geometry optimisations is used",
            "enum": ["NEB", "String method"]
        },
        "number_geometries": {
            "title": "Number geometries",
            "type": "integer",
            "openBISType": "INTEGER",
            "description": "Number of geometries that eventually form the minimum energy path (Could be more than the input geometries)",
            "minimum": 1
        },
        "energy_barrier": {
            "title": "Energy barrier",
            "type": "object",
            "openBISType": "JSON",
            "description": "Difference in energy between the initial geometry and the transition state geometry",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "energies": {
            "title": "Energies",
            "type": "array",
            "openBISType": "JSON",
            "description": "Energy of each replica of the system identifying the minimum energy path",
            "items": {
                "type": "object",
                "properties": {
                    "value": {
                        "type": "number"
                    },
                    "unit": {
                        "type": "string"
                    }
                }
            }
        },
        "geometry_constraints": {
            "title": "Geometry constraints",
            "type": "array",
            "openBISType": "ARRAY_REAL",
            "description": "Geometrical constraints defined in the simulation",
            "items": {
                "type": "number"
            }
        },
        "geometry_constraints_increments": {
            "title": "Geometry constraints increments",
            "type": "array",
            "openBISType": "ARRAY_REAL",
            "description": "Increments used to vary some of the constraints in case the constrained geometry optimisation method is used",
            "items": {
                "type": "number"
            }
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "atomistic_models": {
            "type": "array",
            "items": {
                "$ref": "./atomisticmodel.schema.json"
            },
            "description": "Details about the atomistic models"
        }
    },
    "additionalProperties": false,
    "required": ["name", "method_type"]
}