{
    "@context": {
        "xsd": "http://www.w3.org/2001/XMLSchema#",
        "schema": "http://schema.org/",
        "emmo": "https://w3id.org/emmo#",
        "ncit": "http://purl.obolibrary.org/obo/ncit.owl#",
        "occo": "http://purl.obolibrary.org/obo/occo.owl#",
        "chmo": "http://purl.obolibrary.org/obo/chmo.owl#",
        "afe": "http://purl.allotrope.org/ontologies/equipment#",
        "type": "@type",
        "name": "schema:name",
        "atom_symbol": "emmo:EMMO_eb77076b_a104_42ac_a065_798b2d2809ad",
        "atoms_positions": "@set",
        "x": "ncit:NCIT_C44477",
        "y": "ncit:NCIT_C44478",
        "z": "ncit:NCIT_C44479",
        "wfms_uuid": "ncit:NCIT_C54100",
        "value": "schema:value",
        "unit": "schema:unitCode",
        "comments": "schema:comment",
        "crystal": "emmo:EMMO_0bb3b434_73aa_428f_b4e8_2a2468648e19",
        "molecule": "schema:MolecularEntity"
    },
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/atomisticmodel.schema.json",
    "title": "Atomistic Model",
    "openBISCode": "ATMOD",
    "description": "An atomistic model in the inventory",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "const": "emmo:EMMO_84cadc45_6758_46f2_ba2a_5ead65c70213"
        },
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "atoms_positions": {
            "title": "Atoms positions",
            "type": "array",
            "openBISType": "JSON",
            "description": "List of atomic symbols and cartesian coords",
            "items": {
                "type": "object",
                "properties": {
                    "atom_symbol": {
                        "type": "string",
                        "description": "Atom symbol."
                    },
                    "x": {
                        "type": "object",
                        "description": "X-axis coordinate",
                        "properties": {
                            "value": {
                                "type": "number"
                            },
                            "unit": {
                                "type": "string"
                            }
                        }
                    },
                    "y": {
                        "type": "object",
                        "description": "Y-axis coordinate",
                        "properties": {
                            "value": {
                                "type": "number"
                            },
                            "unit": {
                                "type": "string"
                            }
                        }
                    },
                    "z": {
                        "type": "object",
                        "description": "Z-axis coordinate",
                        "properties": {
                            "value": {
                                "type": "number"
                            },
                            "unit": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "cell_vectors": {
            "title": "Cell vectors",
            "type": "array",
            "openBISType": "JSON",
            "description": "Lattice vectors of the cell",
            "items": {
                "type": "object",
                "properties": {
                    "value": {
                        "type": "number"
                    },
                    "unit": {
                        "type": "string"
                    }
                }
            }
        },
        "periodic_boundary_conditions": {
            "title": "Periodic boundary conditions",
            "type": "object",
            "openBISType": "JSON",
            "description": "Periodic boundary conditions",
            "properties": {
                "x": {
                    "type": "integer",
                    "description": "X-axis."
                },
                "y": {
                    "type": "integer",
                    "description": "Y-axis."
                },
                "z": {
                    "type": "integer",
                    "description": "Z-axis."
                }
            }
        },
        "optimised": {
            "title": "Optimised",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object is optimised."
        },
        "wfms_uuid": {
            "title": "WFMS UUID",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Unique identifier of the simulation object in the WFMS."
        },
        "crystal": {
            "$ref": "./crystal.schema.json",
            "description": "Details about the crystal"
        },
        "molecule": {
            "$ref": "./molecule.schema.json",
            "description": "Details about the molecule"
        }
    },
    "additionalProperties": false,
    "required": ["name", "wfms_uuid"]
}