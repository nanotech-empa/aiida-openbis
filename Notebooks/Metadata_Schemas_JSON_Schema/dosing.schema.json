{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/dosing.schema.json",
    "title": "Dosing",
    "openBISCode": "DOS",
    "description": "Dosing",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "molecule_name": {
            "title": "Molecule name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the used gas molecule."
        },
        "duration": {
            "title": "Duration",
            "type": "object",
            "openBISType": "JSON",
            "description": "Duration",
            "properties": {
                "value": {
                    "type": "string"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "pressure": {
            "title": "Pressure",
            "type": "object",
            "openBISType": "JSON",
            "description": "Pressure",
            "properties": {
                "value": {
                    "type": "string"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "temperature": {
            "title": "Temperature",
            "type": "object",
            "openBISType": "JSON",
            "description": "Temperature",
            "properties": {
                "value": {
                    "type": "string"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "instrument": {
            "$ref": "./instrument.schema.json",
            "description": "Details about the instrument parameters"
        }
    },
    "additionalProperties": false,
    "required": ["name", "molecule_name", "duration"]
}