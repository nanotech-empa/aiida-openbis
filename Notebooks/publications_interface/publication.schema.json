{
    "$id": "publication.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Publication object schema for carbon database interface",
    "type": "object",
    "properties": {
        "names": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
        },
        "structure_sketch_file": { "type": "string" },
        "structure_file": { "type": "string" },
        "classification": { "type": "string" },
        "simulations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "substrate": { "type": "string" },
                    "uks_multiplicity": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "charge": { 
                        "type": "integer",
                        "minimum": 0
                    },
                    "number_alpha_electrons": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "number_beta_electrons": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "energy_au": { "type": "number" },
                    "energy_ev": { "type": "number" },
                    "gap_ev": { "type": "number" },
                    "band_energies": {
                        "type": "array",
                        "items": { "$ref": "#/$defs/band_energy_sim" }
                    },
                    "ldos_orbital_maps": {
                        "type": "array",
                        "items": { "$ref": "#/$defs/image_object" }
                    }
                },
                "required": ["substrate", "energy_ev", "gap_ev"]
            }
        },
        "experiments": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "doi": { "type": "string" },
                    "year": { "type": "integer" },
                    "comments_flags": { "type": "string" },
                    "substrate": { "type": "string" },
                    "gap_ev": { "type": "number" },
                    "spin_excitation_energy_ev": { "type": "number" },
                    "band_energies": {
                        "type": "array",
                        "items": { "$ref": "#/$defs/band_energy_exp" }
                    },
                    "relevant_stm_images": {
                        "type": "array",
                        "items": { "$ref": "#/$defs/image_object" }
                    },
                    "relevant_sts_images": {
                        "type": "array",
                        "minItems": 1,
                        "items": { "$ref": "#/$defs/image_object" }
                    },
                    "precursor": {
                        "type": "object",
                        "properties": {
                            "image_file": { "type": "string" },
                            "structure_file": { "type": "string" },
                            "caption": { "type": "string" }
                        }
                    }
                },
                "required": ["doi", "year", "comments_flags", "substrate", "gap_ev", "relevant_sts_images"]
            }
        }
    },
    "$defs": {
        "band_energy_sim": {
            "type": "object",
            "properties": {
                "index": { "type": "integer" },
                "label": { "type": "string" },
                "e_ef_ev": { "type": "number" },
                "effective_mass_m_e": { "type": "number" }
            },
            "required": ["index", "e_ef_ev"]
        },
        "band_energy_exp": {
            "type": "object",
            "properties": {
                "index": { "type": "integer" },
                "label": { "type": "string" },
                "e_ef_ev": { "type": "number" },
                "error_ev": { "type": "number" },
                "effective_mass_m_e": { "type": "number" },
                "error_m_e": { "type": "number" }
            },
            "required": ["index", "e_ef_ev"]
        },
        "image_object": {
            "type": "object",
            "properties": {
                "file": { "type": "string" },
                "caption": { "type": "string" }
            },
            "required": ["caption"]
        }
    },
    "required": ["names", "structure_sketch_file", "structure_file", "classification"]
}