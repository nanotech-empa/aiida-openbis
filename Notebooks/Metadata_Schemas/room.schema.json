{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/room.schema.json",
    "title": "Room",
    "openBISCode": "ROOM",
    "description": "Room",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the room."
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments about the room."
        },
        "institution": {
            "$ref": "./institution.schema.json",
            "description": "Details about the institution"
        }
    },
    "additionalProperties": false,
    "required": ["name", "institution"]
}