{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/wafersubstrate.schema.json",
    "title": "Wafer Substrate",
    "openBISCode": "WFRSUBS",
    "description": "Wafer Substrate",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the wafer substrate."
        },
        "empaNumber": {
            "title": "Empa number",
            "type": "integer",
            "openBISType": "INTEGER",
            "minimum": 0,
            "description": "The Empa number of the wafer substrate."
        },
        "batch": {
            "title": "Batch",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The batch letter where to the wafer substrate belongs.",
            "pattern": "^[a-z]$"
        },
        "samplePlate": {
            "title": "Sample plate",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Sample plate of the wafer substrate."
        },
        "substrates": {
            "title": "Substrates",
            "type": "array",
            "openBISType": "JSON",
            "items": {
                "type": "object",
                "description": "Substrates.",
                "properties": {
                    "material": {
                        "type": "string"
                    },
                    "thickness": {
                        "type": "string"
                    },
                    "dopants": {
                        "type": "string"
                    },
                    "coverage": {
                        "type": "string"
                    }
                }
            },
            "description": "Details about the substrates."
        },
        "diameter": {
            "title": "Description",
            "type": "object",
            "openBISType": "JSON",
            "description": "Diameter of the wafer substrate.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "height": {
            "title": "Height",
            "type": "object",
            "openBISType": "JSON",
            "description": "Height of the wafer substrate.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "thickness": {
            "title": "Thickness",
            "type": "object",
            "openBISType": "JSON",
            "description": "Thickness of the wafer substrate.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "hazardous": {
            "title": "Hazardous",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the wafer substrate is dangerous."
        },
        "hazardousSpecification": {
            "title": "Hazardous specification",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The specification of the type of danger."
        },
        "fridge": {
            "title": "Fridge",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the wafer substrate must be stored in a fridge."
        },
        "noLight": {
            "title": "No light",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the wafer substrate must be stored in darkness."
        },
        "dry": {
            "title": "Dry",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the wafer substrate must be stored in a dry environment."
        },
        "noOxygen": {
            "title": "No oxygen",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the wafer substrate must be stored in an anaerobic environment."
        },
        "otherStorageCondition": {
            "title": "Other storage condition",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the wafer substrate must be stored following another special storage condition."
        },
        "otherStorageConditionSpecification": {
            "title": "Other storage condition specification",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The specification of the other special storage condition."
        },
        "receiveDate": {
            "title": "Received date",
            "type": "string",
            "openBISType": "DATE",
            "description": "Date when the wafer substrate was received.",
            "format": "date"
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments to the wafer substrate."
        },
        "storage": {
            "$ref": "./storage.schema.json"
        },
        "chemist": {
            "$ref": "./chemist.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "empaNumber", "batch"]
}