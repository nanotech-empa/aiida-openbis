{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/pdos.schema.json",
    "title": "PDOS",
    "openBISCode": "PDOS",
    "description": "PDOS schema",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the PDOS object."
        },
        "wfmsUUID": {
            "title": "WFMS UUID",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Unique identifier of the simulation object in the WFMS.",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "wfmsURL": {
            "title": "WFMS URL",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Link to WFMS.",
            "pattern": "(https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|www\\.[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9]+\\.[^\\s]{2,}|www\\.[a-zA-Z0-9]+\\.[^\\s]{2,})"
        },
        "atomicSelections": {
            "title": "Atomic selections",
            "type": "array",
            "openBISType": "ARRAY_STRING",
            "description": "List of group of atoms on which projections of the orbitals are computed",
            "items": {
                "type": "string"
            }
        },
        "energies": {
            "title": "Energies",
            "type": "array",
            "openBISType": "JSON",
            "description": "Energy of each electronic state and its amplitude on the different projections.",
            "items": {
                "type": "object",
                "properties": {
                    "charge": {
                        "type": "number"
                    },
                    "magneticMomentum": {
                        "type": "number"
                    }
                }
            }
        },
        "orbitalsSelections": {
            "title": "Orbitals selections",
            "type": "array",
            "openBISType": "ARRAY_REAL",
            "description": "Amplitude of each gas phase orbital for a portion of the system on the orbitals of the full system",
            "items": {
                "type": "number"
            }
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments to the PDOS."
        },
        "atomisticModel": {
            "$ref": "./atomisticmodel.schema.json",
            "description": "Details about the atomistic model"
        },
        "densityFunctionalTheory": {
            "$ref": "./dft.schema.json",
            "description": "Details about the DFT"
        },
        "tightBinding": {
            "$ref": "./tightbinding.schema.json",
            "description": "Details about the tight binding"
        }
    },
    "additionalProperties": false,
    "required": ["name", "atomicSelections"]
}