{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/draft.schema.json",
    "title": "Draft",
    "openBISCode": "DRFT",
    "description": "Draft",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the draft."
        },
        "draftType": {
            "title": "Draft type",
            "type": "string",
            "openBISType": "CONTROLLEDVOCABULARY",
            "description": "The type of the draft.",
            "enum": ["preprint", "postprint"]
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments to the draft."
        },
        "results": {
            "type": "array",
            "items": {
                "$ref": "./result.schema.json"
            },
            "description": "Details about the results"
        }
    },
    "additionalProperties": false,
    "required": ["name", "draftType"]
}