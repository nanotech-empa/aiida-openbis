{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/result.schema.json",
    "title": "Result",
    "openBISCode": "RES",
    "description": "Result",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the result."
        },
        "description": {
            "title": "Description",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "The description of the result."
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments to the result."
        },
        "stms": {
            "type": "array",
            "items": {
                "$ref": "./stm.schema.json"
            },
            "description": "Details about the STMs"
        },
        "simulations": {
            "type": "array",
            "items": {
                "$ref": "./simulation.schema.json"
            },
            "description": "Details about the simulation."
        },
        "afms": {
            "type": "array",
            "items": {
                "$ref": "./afm.schema.json"
            },
            "description": "Details about the AFMs"
        },
        "stss": {
            "type": "array",
            "items": {
                "$ref": "./sts.schema.json"
            },
            "description": "Details about the STSs"
        },
        "softwares": {
            "type": "array",
            "items": {
                "$ref": "./software.schema.json"
            },
            "description": "Details about the used softwares"
        }
    },
    "additionalProperties": false,
    "required": ["name", "description"]
}