{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/author.schema.json",
    "title": "Author",
    "openBISCode": "AUTH",
    "description": "Author",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the author."
        },
        "person": {
            "$ref": "./person.schema.json"
        },
        "institution": {
            "$ref": "./institution.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "person", "institution"]
}