{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/storage.schema.json",
    "title": "Storage Custom",
    "openBISCode": "STRG",
    "description": "Storage custom",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the storage."
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments of the storage."
        },
        "room": {
            "$ref": "./room.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "room"]
}