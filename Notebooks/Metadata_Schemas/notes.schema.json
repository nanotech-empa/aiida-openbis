{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/notes.schema.json",
    "title": "Notes",
    "openBISCode": "NOTE",
    "description": "Notes",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the notes."
        },
        "description": {
            "title": "Description",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "The description of the notes."
        }
    },
    "additionalProperties": false,
    "required": ["name"]
}