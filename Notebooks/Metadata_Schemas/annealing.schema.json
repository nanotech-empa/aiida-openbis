{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/annealing.schema.json",
    "title": "Annealing",
    "openBISCode": "ANNEAL",
    "description": "Annealing",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the annealing."
        },
        "duration": {
            "title": "Duration",
            "type": "object",
            "openBISType": "JSON",
            "description": "Duration of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "pressure": {
            "title": "Pressure",
            "type": "object",
            "openBISType": "JSON",
            "description": "Pressure of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "dischargeVoltage": {
            "title": "Discharge voltage",
            "type": "object",
            "openBISType": "JSON",
            "description": "Discharge voltage of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "voltage": {
            "title": "Voltage",
            "type": "object",
            "openBISType": "JSON",
            "description": "Voltage of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "temperature": {
            "title": "Temperature",
            "type": "object",
            "openBISType": "JSON",
            "description": "Temperature of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "angle": {
            "title": "Angle",
            "type": "object",
            "openBISType": "JSON",
            "description": "Angle of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "current": {
            "title": "Current",
            "type": "object",
            "openBISType": "JSON",
            "description": "Current",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "comments": {
            "title": "Current",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "sputtering": {
            "$ref": "./sputtering.schema.json"
        },
        "deposition": {
            "$ref": "./deposition.schema.json"
        },
        "uhvComponent": {
            "$ref": "./uhvcomponent.schema.json"
        },
        "instrument": {
            "$ref": "./instrument.schema.json",
            "description": "Details about the instrument parameters"
        }
    },
    "additionalProperties": false,
    "required": ["name", "duration"]
}