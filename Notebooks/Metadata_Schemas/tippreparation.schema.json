{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/tippreparation.schema.json",
    "title": "Tip Preparation",
    "openBISCode": "TIPPREP",
    "description": "Tip Preparation",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the tip preparation."
        },
        "description": {
            "title": "Description",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "The description of the preparation."
        },
        "tipPreparationType": {
            "title": "Tip preparation type",
            "type": "string",
            "openBISType": "CONTROLLEDVOCABULARY",
            "enum": ["FIB", "Etched"],
            "description": "Tip preparation type."
        },
        "tipSensor": {
            "$ref": "./tipsensor.schema.json"
        },
        "author": {
            "$ref": "./author.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "tiPreparationType", "tipSensor", "author"]
}