{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/bandstructure.schema.json",
    "title": "Band Structure",
    "openBISCode": "BNDSTR",
    "description": "Band Structure schema",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the band structure object."
        },
        "KPointsConditions": {
            "title": "K-points Conditions",
            "type": "array",
            "openBISType": "JSON",
            "description": "List of K Points in the first Brillouin zone identifying the path along which the bands are computed",
            "items": {
                "type": "object",
                "properties": {
                    "x": {
                        "type": "number",
                        "description": "X-axis."
                    },
                    "y": {
                        "type": "number",
                        "description": "Y-axis."
                    },
                    "z": {
                        "type": "number",
                        "description": "Z-axis."
                    }
                }
            }
        },
        "energies": {
            "title": "Energies",
            "type": "array",
            "openBISType": "JSON",
            "description": "Energy of each replica of the system identifying the minimum energy path.",
            "items": {
                "type": "object",
                "properties": {
                    "charge": {
                        "type": "number"
                    },
                    "magneticMomentum": {
                        "type": "number"
                    }
                }
            }
        },
        "fermiEnergy": {
            "title": "Fermi energy",
            "type": "number",
            "openBISType": "REAL",
            "description": "Fermi energy."
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Comments to the band structure."
        },
        "atomisticModels": {
            "type": "array",
            "items": {
                "$ref": "./atomisticmodel.schema.json"
            },
            "description": "Details about the atomistic models"
        },
        "densityFunctionalTheory": {
            "$ref": "./dtf.schema.json",
            "description": "Details about the DFT"
        },
        "tightBinding": {
            "$ref": "./tightbinding.schema.json",
            "description": "Details about the Tight Binding"
        }
    },
    "additionalProperties": false,
    "required": ["name", "KPointsConditions"]
}