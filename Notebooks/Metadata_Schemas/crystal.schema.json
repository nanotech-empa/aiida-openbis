{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/crystal.schema.json",
    "title": "Crystal",
    "openBISCode": "CRYS",
    "description": "Crystal",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the crystal."
        },
        "material": {
            "title": "Material",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The material of the crystal."
        },
        "face": {
            "title": "Face",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The face of the crystal."
        },
        "samplePlate": {
            "title": "Sample plate",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Sample plate of the crystal."
        },
        "diameter": {
            "title": "Diameter",
            "type": "object",
            "openBISType": "JSON",
            "description": "Diameter of the crystal.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "height": {
            "title": "Height",
            "type": "object",
            "openBISType": "JSON",
            "description": "Height of the crystal.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "hazardous": {
            "title": "Hazardous",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the crystal is dangerous."
        },
        "hazardousSpecification": {
            "title": "Hazardous specification",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The specification of the type of danger."
        },
        "fridge": {
            "title": "Fridge",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the crystal must be stored in a fridge."
        },
        "noLight": {
            "title": "No light",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the crystal must be stored in darkness."
        },
        "dry": {
            "title": "Dry",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the crystal must be stored in a dry environment."
        },
        "noOxygen": {
            "title": "No oxygen",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the crystal must be stored in an anaerobic environment."
        },
        "otherStorageCondition": {
            "title": "Other storage condition",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the crystal must be stored following another special storage condition."
        },
        "otherStorageConditionSpecification": {
            "title": "Other storage condition specification",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The specification of the other special storage condition."
        },
        "specifications": {
            "title": "Specifications",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Specifications of the crystal."
        },
        "receiveDate": {
            "title": "Received date",
            "type": "string",
            "openBISType": "DATE",
            "description": "Date when the crystal was received.",
            "format": "date"
        },
        "referenceNumber": {
            "title": "Reference number",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Reference number of the crystal."
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments to the wafer substrate."
        },
        "storage": {
            "$ref": "./storage.schema.json"
        },
        "chemist": {
            "$ref": "./supplier.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "material", "face"]
}