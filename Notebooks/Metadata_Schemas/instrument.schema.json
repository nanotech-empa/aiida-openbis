{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/instrument.schema.json",
    "title": "Instrument",
    "openBISCode": "INSTR",
    "description": "Instrument",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the instrument."
        },
        "serialNumber": {
            "title": "Serial number",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The serial number of the instrument."
        },
        "empaId": {
            "title": "Empa ID",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Empa ID (given by Empa to expensive objects)."
        },
        "documentationWebsite": {
            "title": "Documentation website",
            "type": "string",
            "openBISType": "HYPERLINK",
            "description": "Documentation website.",
            "pattern": "(https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|www\\.[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9]+\\.[^\\s]{2,}|www\\.[a-zA-Z0-9]+\\.[^\\s]{2,})"
        },
        "receiveDate": {
            "title": "Received date",
            "type": "string",
            "openBISType": "DATE",
            "description": "Date when the instrument was received.",
            "format": "date"
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments to the instrument."
        },
        "uhvComponents": {
            "type": "array",
            "items": {
                "$ref": "./uhvcomponent.schema.json"
            },
            "description": "UHV components."
        },
        "room": {
            "$ref": "./room.schema.json"
        },
        "manufacturer": {
            "$ref": "./manufacturer.schema.json"
        },
        "tipSensor": {
            "$ref": "./tipsensor.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "serialNumber", "empaId"]
}