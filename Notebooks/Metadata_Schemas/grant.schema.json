{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/grant.schema.json",
    "title": "Grant",
    "openBISCode": "GRNT",
    "description": "A grant",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the grant."
        },
        "funder": {
            "title": "Funder",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The funding agency."
        },
        "startDate": {
            "title": "Start date",
            "type": "string",
            "openBISType": "DATE",
            "description": "The starting date of the grant.",
            "format": "date"
        },
        "endDate": {
            "title": "End date",
            "type": "string",
            "openBISType": "DATE",
            "description": "The end date of the grant.",
            "format": "date"
        },
        "budget": {
            "title": "Budget",
            "type": "object",
            "openBISType": "JSON",
            "description": "Amount of money.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "currency": {
                    "type": "string"
                }
            }
        },
        "projectId": {
            "title": "Project ID",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The ID of the project."
        },
        "acknowledgementSentence": {
            "title": "Acknowledgement sentence",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Acknowledgements."
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments to the grant."
        }
    },
    "additionalProperties": false,
    "required": ["name", "funder", "startDate", "endDate", "budget", "projectId"]
}