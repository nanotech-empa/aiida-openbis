{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/fillcryostat.schema.json",
    "title": "Fill Cryostat",
    "openBISCode": "FILLCRYO",
    "description": "Fill Cryostat",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the fill cryostat."
        },
        "weightBefore": {
            "title": "Weight before",
            "type": "object",
            "openBISType": "JSON",
            "description": "Weight of the container (before).",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "weightAfter": {
            "title": "Weight after",
            "type": "object",
            "openBISType": "JSON",
            "description": "Weight of the container (after).",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "substance": {
            "title": "Substance",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the cryostat substance."
        },
        "dewar": {
            "title": "Dewar",
            "type": "integer",
            "openBISType": "INTEGER",
            "description": "The number of the container."
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments to the molecule."
        },
        "uhvComponent": {
            "$ref": "./uhvcomponent.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name"]
}