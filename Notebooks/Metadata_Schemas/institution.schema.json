{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/institution.schema.json",
    "title": "Institution",
    "openBISCode": "INST",
    "description": "Institution",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the institution."
        },
        "description": {
            "title": "Description",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "The description of the institution."
        },
        "address": {
            "title": "Address",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The address of the institution."
        }
    },
    "additionalProperties": false,
    "required": ["name", "address"]
}