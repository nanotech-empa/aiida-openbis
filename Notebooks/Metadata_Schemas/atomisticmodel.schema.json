{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/atomisticmodel.schema.json",
    "title": "Atomistic Model",
    "openBISCode": "ATMOD",
    "description": "An atomistic model in the inventory",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the atomistic model."
        },
        "atomsPositions": {
            "title": "Atoms positions",
            "type": "array",
            "openBISType": "JSON",
            "description": "List of atomic symbols and cartesian coords in Angstorm.",
            "items": {
                "type": "object",
                "properties": {
                    "atomSymbol": {
                        "type": "string",
                        "description": "Atom symbol."
                    },
                    "x": {
                        "type": "object",
                        "description": "X-axis coordinate.",
                        "properties": {
                            "value": {
                                "type": "number"
                            },
                            "unit": {
                                "type": "string"
                            }
                        }
                    },
                    "y": {
                        "type": "object",
                        "description": "Y-axis coordinate.",
                        "properties": {
                            "value": {
                                "type": "number"
                            },
                            "unit": {
                                "type": "string"
                            }
                        }
                    },
                    "z": {
                        "type": "object",
                        "description": "Z-axis coordinate.",
                        "properties": {
                            "value": {
                                "type": "number"
                            },
                            "unit": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments of the atomistic model."
        },
        "cellVectors": {
            "title": "Cell vectors",
            "type": "array",
            "openBISType": "JSON",
            "description": "Lattice vectors of the cell in Angstorm",
            "items": {
                "type": "object",
                "properties": {
                    "value": {
                        "type": "number"
                    },
                    "unit": {
                        "type": "string"
                    }
                }
            }
        },
        "periodicBoundaryConditions": {
            "title": "Periodic boundary conditions",
            "type": "object",
            "openBISType": "JSON",
            "description": "Periodic boundary conditions",
            "properties": {
                "x": {
                    "type": "string",
                    "description": "X-axis."
                },
                "y": {
                    "type": "string",
                    "description": "Y-axis."
                },
                "z": {
                    "type": "string",
                    "description": "Z-axis."
                }
            }
        },
        "optimised": {
            "title": "Optimised",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the atomistic model is optimised."
        },
        "wfmsUUID": {
            "title": "WFMS UUID",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Unique identifier of the simulation object in the WFMS."
        },
        "crystal": {
            "$ref": "./crystal.schema.json",
            "description": "Details about the crystal"
        },
        "molecule": {
            "$ref": "./molecule.schema.json",
            "description": "Details about the molecule"
        }
    },
    "additionalProperties": false,
    "required": ["name", "wfmsUUID"]
}