{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/errors.schema.json",
    "title": "Errors and Problems",
    "openBISCode": "ERR",
    "description": "Errors and Problems",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the error."
        },
        "description": {
            "title": "Description",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "The description of the error."
        },
        "instrument": {
            "$ref": "./instrument.schema.json"
        },
        "uhvComponent": {
            "$ref": "./uhvcomponent.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name"]
}