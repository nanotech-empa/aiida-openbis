{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/layered2dmaterial.schema.json",
    "title": "Layered 2D Material",
    "openBISCode": "LYRDMAT",
    "description": "Layered 2D Material",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the layered 2D material."
        },
        "empaNumber": {
            "title": "Empa number",
            "type": "integer",
            "openBISType": "INTEGER",
            "minimum": 0,
            "description": "The Empa number of the layered 2D material."
        },
        "batch": {
            "title": "Batch",
            "type": "string",
            "openBISType": "CONTROLLEDVOCABULARY",
            "description": "The batch letter where to the layered 2D material belongs.",
            "pattern": "^[a-z]$"
        },
        "samplePlate": {
            "title": "Sample plate",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Sample plate of the layered 2D material."
        },
        "2DLayers": {
            "title": "2D layers",
            "type": "array",
            "openBISType": "JSON",
            "items": {
                "type": "object",
                "description": "2D layers.",
                "properties": {
                    "material": {
                        "type": "string"
                    },
                    "numberLayers": {
                        "type": "string"
                    },
                    "dopants": {
                        "type": "string"
                    },
                    "coverage": {
                        "type": "string"
                    }
                }
            },
            "description": "Details about the 2D layers."
        },
        "substrates": {
            "title": "Substrates",
            "type": "array",
            "openBISType": "JSON",
            "items": {
                "type": "object",
                "description": "Substrates.",
                "properties": {
                    "material": {
                        "type": "string"
                    },
                    "thickness": {
                        "type": "string"
                    },
                    "dopants": {
                        "type": "string"
                    },
                    "coverage": {
                        "type": "string"
                    }
                }
            },
            "description": "Details about the substrates."
        },
        "width": {
            "title": "Width",
            "type": "object",
            "openBISType": "JSON",
            "description": "Width of the layered 2D material.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "length": {
            "title": "Length",
            "type": "object",
            "openBISType": "JSON",
            "description": "Length of the layered 2D material.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "thickness": {
            "title": "Thickness",
            "type": "object",
            "openBISType": "JSON",
            "description": "Thickness of the layered 2D material.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "hazardous": {
            "title": "Hazardous",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the layered 2D material is dangerous."
        },
        "hazardousSpecification": {
            "title": "Hazardous specification",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The specification of the type of danger."
        },
        "fridge": {
            "title": "Fridge",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the layered 2D material must be stored in a fridge."
        },
        "noLight": {
            "title": "No light",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the layered 2D material must be stored in darkness."
        },
        "dry": {
            "title": "Dry",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the layered 2D material must be stored in a dry environment."
        },
        "noOxygen": {
            "title": "No oxygen",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the layered 2D material must be stored in an anaerobic environment."
        },
        "otherStorageCondition": {
            "title": "Other storage condition",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the layered 2D material must be stored following another special storage condition."
        },
        "otherStorageConditionSpecification": {
            "title": "Other storage condition specification",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The specification of the other special storage condition."
        },
        "receiveDate": {
            "title": "Received date",
            "type": "string",
            "openBISType": "DATE",
            "description": "Date when the layered 2D material was received.",
            "format": "date"
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments to the layered 2D material."
        },
        "storage": {
            "$ref": "./storage.schema.json"
        },
        "chemist": {
            "$ref": "./chemist.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "empaNumber", "batch"]
}