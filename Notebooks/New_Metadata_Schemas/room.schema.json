{
    "@context": {
        "schema": "http://schema.org/",
        "type": "@type",
        "name": "schema:name",
        "comments": "schema:comment",
        "institution": "schema:Organization"
    },
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/room.schema.json",
    "title": "Room",
    "openBISCode": "ROOM",
    "description": "Room",
    "type": "object",
    "properties": {
        "type":{
            "type": "string",
            "const": "schema:Room"
        },
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "institution": {
            "$ref": "./institution.schema.json",
            "description": "Details about the institution"
        }
    },
    "additionalProperties": false,
    "required": ["name", "institution"]
}