{
    "@context": {
        "schema": "http://schema.org/",
        "emmo": "https://w3id.org/emmo#",
        "emmo-da": "http://emmo.info/domain-atomistic#",
        "type": "@type",
        "name": "schema:name",
        "wfms_uuid": "ncit:NCIT_C54100",
        "wfms_url": "schema:url",
        "value": "schema:value",
        "unit": "schema:unitCode",
        "net_charge": ,
        "smearing": ,
        "fermi_dirac_temperature": ,
        "force_multiplicity": ,
        "output_hirshfeld_population_analysis": ,
        "output_mulliken_population_analysis": ,
        "comments": "schema:comment"
    },
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/dft.schema.json",
    "title": "Density Functional Theory",
    "openBISCode": "DFT",
    "description": "Density functional theory schema",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "const": "emmo-da:83a69cf2-00c1-58b8-915b-76cb3549890a"
        },
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "wfms_uuid": {
            "title": "WFMS UUID",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Unique identifier of the simulation object in the WFMS",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "wfms_url": {
            "title": "WFMS URL",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Link to WFMS",
            "pattern": "(https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|www\\.[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9]+\\.[^\\s]{2,}|www\\.[a-zA-Z0-9]+\\.[^\\s]{2,})"
        },
        "scf_convergence_threshold": {
            "title": "SCF convergence threshold",
            "type": "object",
            "openBISType": "JSON",
            "description": "Threshold for the convergence of the wave function",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "xc_functional": {
            "title": "XC functional",
            "type": "string",
            "openBISType": "CONTROLLEDVOCABULARY",
            "description": "Approximation used for the exchanged correlation functional",
            "enum": ["Exchange correlation function"]
        },
        "spin_polarised_calculation": {
            "title": "Spin polarised calculation",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether spin polarisation calculation is considered"
        },
        "initial_spin_guesses": {
            "title": "Initial spin guesses",
            "type": "array",
            "openBISType": "ARRAY_REAL",
            "description": "Initial value of the magnetisation for each atom",
            "items": {
                "type": "number"
            }
        },
        "spin_multiplicity": {
            "title": "Spin multiplicity",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Spin multiplicity"
        },
        "absolute_magnetisation": {
            "title": "Absolute magnetisation",
            "type": "object",
            "openBISType": "JSON",
            "description": "Output value of the absolute magnetisation",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "total_magnetisation": {
            "title": "Total magnetisation",
            "type": "object",
            "openBISType": "JSON",
            "description": "Output value of the total magnetisation",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "total_spin_squared": {
            "title": "Total spin squared",
            "type": "number",
            "openBISType": "REAL",
            "description": "Output value of the eigenvalue of the square operator to control spin contamination"
        },
        "net_charge": {
            "title": "Net charge",
            "type": "number",
            "openBISType": "REAL",
            "description": "Difference between electronic and ionic charge of the system (+1 means one electron is being removed from the neutral charge system)"
        },
        "smearing": {
            "title": "Smearing",
            "type": "object",
            "openBISType": "JSON",
            "description": "Energy value for electron broadening function for fractional occupation of orbitals",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "fermi_dirac_temperature": {
            "title": "Fermi Dirac temperature",
            "type": "object",
            "openBISType": "JSON",
            "description": "Temperature used for broadening in case of Fermi-Dirac broadening function for fractional occupation of orbitals",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "force_multiplicity": {
            "title": "Force multiplicity",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "If True multiplicity is constrained to the input value in a calculation with broadening of the occupation of orbitals"
        },
        "output_mulliken_population_analysis": {
            "title": "Output Mulliken population analysis",
            "type": "array",
            "openBISType": "JSON",
            "description": "Charges and magnetic momentum for each atom resulting from Muliken population analysis",
            "items": {
                "type": "object",
                "properties": {
                    "charge": {
                        "type": "number"
                    },
                    "magnetic_momentum": {
                        "type": "number"
                    }
                }
            }
        },
        "output_hirshfeld_population_analysis": {
            "title": "Output Hirshfeld population analysis",
            "type": "array",
            "openBISType": "JSON",
            "description": "Charges and magnetic momentum for each atom resulting from Hirshfeld population analysis",
            "items": {
                "type": "object",
                "properties": {
                    "charge": {
                        "type": "number"
                    },
                    "magnetic_momentum": {
                        "type": "number"
                    }
                }
            }
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        }
    },
    "additionalProperties": false,
    "required": ["name"]
}