{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/transfer.schema.json",
    "title": "Transfer",
    "openBISCode": "TRANSF",
    "description": "A transfer in the inventory",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "description": {
            "title": "Description",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Description"
        },
        "location_before": {
            "title": "Name",
            "description": "Location of the sample before the transfer",
            "$ref": "./room.schema.json"
        },
        "location_after": {
            "description": "Location of the sample after the transfer",
            "$ref": "./room.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "location_before", "location_after"]
}