{
    "@context": {
        "schema": "http://schema.org/",
        "emmo": "https://w3id.org/emmo#",
        "emmo-da": "http://emmo.info/domain-atomistic#",
        "chmo": "http://purl.obolibrary.org/obo/chmo.owl#",
        "ncit": "http://purl.obolibrary.org/obo/ncit.owl#",
        "type": "@type",
        "name": "schema:name",
        "pressure": "emmo:EMMO_50a44256_9dc5_434b_bad4_74a4d9a29989",
        "comments": "schema:comment",
        "annealing": "chmo:CHMO_0001465",
        "molecule": "schema:MolecularEntity"
    },
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/deposition.schema.json",
    "title": "Deposition",
    "openBISCode": "DEPOS",
    "description": "Deposition",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "const": "chmo:CHMO_0001310"
        },
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "stabilitation_time": {
            "title": "Stabilisation time",
            "type": "object",
            "openBISType": "JSON",
            "description": "Time to stabilise",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "deposition_time": {
            "title": "Deposition time",
            "type": "object",
            "openBISType": "JSON",
            "description": "Time to deposit",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "pressure": {
            "title": "Pressure",
            "type": "object",
            "openBISType": "JSON",
            "description": "Pressure",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "substrate_temperature": {
            "title": "Substrate temperature",
            "type": "object",
            "openBISType": "JSON",
            "description": "Substrate temperature",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "molecule_temperature": {
            "title": "Molecule temperature",
            "type": "object",
            "openBISType": "JSON",
            "description": "Molecule temperature",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "evaporator_slot": {
            "title": "Evaporator slot",
            "type": "object",
            "openBISType": "JSON",
            "description": "Evaporator slot",
            "properties": {
                "number": {
                    "type": "number",
                    "minimum": 0
                },
                "details": {
                    "type": "string"
                }
            }
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "annealing": {
            "$ref": "./annealing.schema.json"
        },
        "molecule": {
            "$ref": "./molecule.schema.json"
        },
        "uhv_component": {
            "$ref": "./uhvcomponent.schema.json"
        },
        "instrument": {
            "$ref": "./instrument.schema.json",
            "description": "Details about the instrument parameters"
        }
    },
    "additionalProperties": false,
    "required": ["name", "stabilitation_time", "deposition_time", "molecule"]
}