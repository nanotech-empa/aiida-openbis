{
    "@context": {
        "xsd": "http://www.w3.org/2001/XMLSchema#",
        "schema": "http://schema.org/",
        "emmo": "https://w3id.org/emmo#",
        "ncit": "http://purl.obolibrary.org/obo/ncit.owl#",
        "occo": "http://purl.obolibrary.org/obo/occo.owl#",
        "afe": "http://purl.allotrope.org/ontologies/equipment#",
        "type": "@type",
        "name": "schema:name",
        "iupac_name": "schema:iupacName",
        "sum_formula": "schema:molecularFormula",
        "smiles": "schema:smiles",
        "cas_number": "emmo:EMMO_d2a47cd8_662f_438f_855a_b4378eb992ff",
        "empa_number": "schema:identifier",
        "batch": "ncit:NCIT_C67073",
        "vial": "afe:AFE_0000329",
        "hazardous": "ncit:NCIT_C73538",
        "chemist_molecule_name": "schema:alternateName",
        "amount": "schema:QuantitativeValue",
        "value": "schema:value",
        "unit": "schema:unitCode",
        "receive_date": "ncit:NCIT_C164590",
        "comments": "schema:comment",
        "chemist": "occo:OCCO_19203100",
        "storage": "ncit:NCIT_C16143",
        "molecules": "@set",
        "molecule": "schema:MolecularEntity"
    },
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/molecule.schema.json",
    "title": "Molecule",
    "openBISCode": "MOL",
    "description": "A molecule in the inventory",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "const": "schema:MolecularEntity"
        },
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "iupac_name": {
            "title": "IUPAC name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "IUPAC name"
        },
        "sum_formula": {
            "title": "Sum formula",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Chemical formula"
        },
        "smiles": {
            "title": "SMILES",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "SMILES"
        },
        "cas_number": {
            "title": "CAS number",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "CAS number"
        },
        "empa_number": {
            "title": "Empa number",
            "type": "integer",
            "openBISType": "INTEGER",
            "minimum": 0,
            "description": "Empa number"
        },
        "batch": {
            "title": "Batch",
            "type": "string",
            "openBISType": "CONTROLLEDVOCABULARY",
            "description": "Batch",
            "pattern": "^[a-z]$"
        },
        "vial": {
            "title": "Vial",
            "type": "string",
            "openBISType": "CONTROLLEDVOCABULARY",
            "description": "Vial",
            "enum": ["i", "ii", "iii", "iv", "v", "vi", "vii", "viii", "ix", "x"]
        },
        "hazardous": {
            "title": "Hazardous",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object is dangerous"
        },
        "hazardous_specification": {
            "title": "Hazardous specification",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The specification of the type of danger"
        },
        "evaporation_temperatures": {
            "title": "Evaporation temperatures",
            "type": "array",
            "openBISType": "JSON",
            "description": "Evaporation temperatures, used instruments, and the datetime when the evaporations were performed, separated by commas",
            "items": {
                "type": "object",
                "properties": {
                    "device": {
                        "type": "string"
                    },
                    "temperature": {
                        "type": "object",
                        "properties": {
                            "value": {
                                "type": "string"
                            },
                            "unit": {
                                "type": "string"
                            }
                        }
                    },
                    "datetime": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        },
        "fridge": {
            "title": "Fridge",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object must be stored in a fridge"
        },
        "no_light": {
            "title": "No light",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object must be stored in darkness"
        },
        "dry": {
            "title": "Dry",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object must be stored in a dry environment"
        },
        "no_oxygen": {
            "title": "No oxygen",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object must be stored in an anaerobic environment"
        },
        "other_storage_condition": {
            "title": "Other storage condition",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object must be stored following another special storage condition"
        },
        "other_storage_condition_specification": {
            "title": "Other storage condition specification",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The specification of the other special storage condition"
        },
        "chemist_molecule_name": {
            "title": "Chemist molecule name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Molecule name given by the chemist that synthesised it"
        },
        "amount": {
            "title": "Amount",
            "type": "object",
            "openBISType": "JSON",
            "description": "Amount",
            "properties": {
                "value": {
                    "type": "string"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "receive_date": {
            "title": "Received date",
            "type": "string",
            "openBISType": "DATE",
            "description": "Received date",
            "format": "date"
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "chemist": {
            "$ref": "./chemist.schema.json",
            "description": "Details about the chemist"
        },
        "storage": {
            "$ref": "./storage.schema.json",
            "description": "Details about the storage"
        },
        "molecules": {
            "type": "array",
            "items": {
                "$ref": "./molecule.schema.json"
            },
            "description": "Details about the parent molecules"
        }
    },
    "additionalProperties": false,
    "required": ["name", "smiles"]
}