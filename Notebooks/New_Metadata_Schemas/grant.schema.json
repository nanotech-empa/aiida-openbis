{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/grant.schema.json",
    "title": "Grant",
    "openBISCode": "GRNT",
    "description": "A grant",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "funder": {
            "title": "Funder",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The funding agency"
        },
        "start_date": {
            "title": "Start date",
            "type": "string",
            "openBISType": "DATE",
            "description": "Starting date",
            "format": "date"
        },
        "end_date": {
            "title": "End date",
            "type": "string",
            "openBISType": "DATE",
            "description": "End date",
            "format": "date"
        },
        "budget": {
            "title": "Budget",
            "type": "object",
            "openBISType": "JSON",
            "description": "Amount of money",
            "properties": {
                "value": {
                    "type": "string"
                },
                "currency": {
                    "type": "string"
                }
            }
        },
        "project_id": {
            "title": "Project ID",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The ID of the project"
        },
        "acknowledgement_sentence": {
            "title": "Acknowledgement sentence",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Acknowledgements"
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        }
    },
    "additionalProperties": false,
    "required": ["name", "funder", "start_date", "end_date", "budget", "project_id"]
}