{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/layered2dmaterial.schema.json",
    "title": "Layered 2D Material",
    "openBISCode": "LYRDMAT",
    "description": "Layered 2D Material",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "empa_number": {
            "title": "Empa number",
            "type": "integer",
            "openBISType": "INTEGER",
            "minimum": 0,
            "description": "Empa number"
        },
        "batch": {
            "title": "Batch",
            "type": "string",
            "openBISType": "CONTROLLEDVOCABULARY",
            "description": "Batch",
            "pattern": "^[a-z]$"
        },
        "sample_plate": {
            "title": "Sample plate",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Sample plate"
        },
        "2d_layers": {
            "title": "2D layers",
            "type": "array",
            "openBISType": "JSON",
            "items": {
                "type": "object",
                "description": "2D layers",
                "properties": {
                    "material": {
                        "type": "string"
                    },
                    "number_layers": {
                        "type": "string"
                    },
                    "dopants": {
                        "type": "string"
                    },
                    "coverage": {
                        "type": "string"
                    }
                }
            },
            "description": "Details about the 2D layers"
        },
        "substrates": {
            "title": "Substrates",
            "type": "array",
            "openBISType": "JSON",
            "items": {
                "type": "object",
                "description": "Substrates",
                "properties": {
                    "material": {
                        "type": "string"
                    },
                    "thickness": {
                        "type": "string"
                    },
                    "dopants": {
                        "type": "string"
                    },
                    "coverage": {
                        "type": "string"
                    }
                }
            },
            "description": "Details about the substrates"
        },
        "width": {
            "title": "Width",
            "type": "object",
            "openBISType": "JSON",
            "description": "Width",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "length": {
            "title": "Length",
            "type": "object",
            "openBISType": "JSON",
            "description": "Length",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "thickness": {
            "title": "Thickness",
            "type": "object",
            "openBISType": "JSON",
            "description": "Thickness",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "hazardous": {
            "title": "Hazardous",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object is dangerous."
        },
        "hazardous_specification": {
            "title": "Hazardous specification",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The specification of the type of danger."
        },
        "fridge": {
            "title": "Fridge",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object must be stored in a fridge."
        },
        "no_light": {
            "title": "No light",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object must be stored in darkness."
        },
        "dry": {
            "title": "Dry",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object must be stored in a dry environment."
        },
        "no_oxygen": {
            "title": "No oxygen",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object must be stored in an anaerobic environment."
        },
        "other_storage_condition": {
            "title": "Other storage condition",
            "type": "boolean",
            "openBISType": "BOOLEAN",
            "description": "Whether the object must be stored following another special storage condition."
        },
        "other_storage_condition_specification": {
            "title": "Other storage condition specification",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The specification of the other special storage condition."
        },
        "receive_date": {
            "title": "Received date",
            "type": "string",
            "openBISType": "DATE",
            "description": "Received date",
            "format": "date"
        },
        "supplier_own_name": {
            "title": "Supplier own name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name given by the supplier."
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "storage": {
            "$ref": "./storage.schema.json"
        },
        "chemist": {
            "$ref": "./chemist.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "empa_number", "batch"]
}