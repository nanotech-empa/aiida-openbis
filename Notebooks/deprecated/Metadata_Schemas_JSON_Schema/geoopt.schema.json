{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/geoopt.schema.json",
    "title": "Geometry Optimisation",
    "openBISCode": "GEOOPT",
    "description": "Geometry Optimisation schema",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "wfms_uuid": {
            "title": "WFMS UUID",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Unique identifier of the simulation object in the WFMS",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "wfms_url": {
            "title": "WFMS URL",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Link to WFMS",
            "pattern": "(https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|www\\.[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9]+\\.[^\\s]{2,}|www\\.[a-zA-Z0-9]+\\.[^\\s]{2,})"
        },
        "force_convergence_threshold": {
            "title": "Force convergence threshold",
            "type": "object",
            "openBISType": "JSON",
            "description": "Maximum force allowed on each atom before the optimisation is converged",
            "properties": {
                "charge": {
                    "type": "number"
                },
                "magnetic_momentum": {
                    "type": "number"
                }
            }
        },
        "geometry_constraints": {
            "title": "Geometry constraints",
            "type": "array",
            "openBISType": "ARRAY_REAL",
            "description": "Geometrical constraints defined in the simulation",
            "items": {
                "type": "number"
            }
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "atomistic_model": {
            "$ref": "./atomisticmodel.schema.json",
            "description": "Details about the atomistic model"
        },
        "density_functional_theory": {
            "$ref": "./dft.schema.json",
            "description": "Details about the DFT"
        },
        "empirical_modeling": {
            "$ref": "./empiricalmodeling.schema.json",
            "description": "Details about the empirical modeling"
        }
    },
    "additionalProperties": false,
    "required": ["name", "force_convergence_threshold"]
}