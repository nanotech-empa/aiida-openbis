{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/pec.schema.json",
    "title": "Potential Energy Calculation",
    "openBISCode": "PEC",
    "description": "Potential Energy Calculation schema",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "wfms_uuid": {
            "title": "WFMS UUID",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Unique identifier of the simulation object in the WFMS",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "wfms_url": {
            "title": "WFMS URL",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Link to WFMS.",
            "pattern": "(https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|www\\.[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9]+\\.[^\\s]{2,}|www\\.[a-zA-Z0-9]+\\.[^\\s]{2,})"
        },
        "energy": {
            "title": "Energy",
            "type": "object",
            "openBISType": "JSON",
            "description": "Energy",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "density_functional_theory": {
            "$ref": "./dft.schema.json",
            "description": "Details about the DFT"
        },
        "tight_binding": {
            "$ref": "./tightbinding.schema.json",
            "description": "Details about the tight binding"
        },
        "empirical_modeling": {
            "$ref": "./empiricalmodeling.schema.json",
            "description": "Details about the empirical modeling"
        }
    },
    "additionalProperties": false,
    "required": ["name", "atomic_selections"]
}