{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/instrument.schema.json",
    "title": "Instrument",
    "openBISCode": "INSTR",
    "description": "Instrument",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "serial_number": {
            "title": "Serial number",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Serial number"
        },
        "empa_id": {
            "title": "Empa ID",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Empa ID (given by Empa to expensive objects)"
        },
        "documentation_website": {
            "title": "Documentation website",
            "type": "string",
            "openBISType": "HYPERLINK",
            "description": "Documentation website",
            "pattern": "(https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|www\\.[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|https?:\/\/(?:www\\.|(?!www))[a-zA-Z0-9]+\\.[^\\s]{2,}|www\\.[a-zA-Z0-9]+\\.[^\\s]{2,})"
        },
        "receive_date": {
            "title": "Received date",
            "type": "string",
            "openBISType": "DATE",
            "description": "Received date",
            "format": "date"
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "uhv_components": {
            "type": "array",
            "items": {
                "$ref": "./uhvcomponent.schema.json"
            },
            "description": "UHV components"
        },
        "room": {
            "$ref": "./room.schema.json"
        },
        "manufacturer": {
            "$ref": "./manufacturer.schema.json"
        },
        "tip_sensor": {
            "$ref": "./tipsensor.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "serial_number", "empa_id"]
}