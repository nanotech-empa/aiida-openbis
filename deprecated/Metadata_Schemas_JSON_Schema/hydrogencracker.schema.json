{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/hydrogencracker.schema.json",
    "title": "Hydrogen Cracker",
    "openBISCode": "HC",
    "description": "Hydrogen Cracker",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "molecule_name": {
            "title": "Molecule name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The name of the used gas molecule"
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "uhv_component": {
            "$ref": "./uhvcomponent.schema.json"
        },
        "instrument": {
            "$ref": "./instrument.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "molecule_name"]
}
