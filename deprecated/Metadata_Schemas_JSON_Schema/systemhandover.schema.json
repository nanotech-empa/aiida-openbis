{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/systemhandover.schema.json",
    "title": "System Handover",
    "openBISCode": "SYSHNDOV",
    "description": "System Handover",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "vacuum_system_status": {
            "title": "Vacuum system status",
            "type": "object",
            "openBISType": "JSON",
            "description": "Vacuum system status",
            "properties": {
                "principal_chamber": {
                    "type": "object",
                    "description": "Principal chamber",
                    "properties": {
                        "pressure": {
                            "type": "object",
                            "description": "Pressure",
                            "properties": {
                                "value": {
                                    "type": "string"
                                },
                                "unit": {
                                    "type": "string"
                                }
                            }
                        },
                        "tsp_filement_used": {
                            "type": "string",
                            "description": "TSP-Filament used"
                        }
                    }
                },
                "analysis_chamber": {
                    "type": "object",
                    "description": "Analysis chamber",
                    "properties": {
                        "pressure": {
                            "type": "object",
                            "description": "Pressure",
                            "properties": {
                                "value": {
                                    "type": "string"
                                },
                                "unit": {
                                    "type": "string"
                                }
                            }
                        },
                        "tsp_filement_used": {
                            "type": "string",
                            "description": "TSP-Filament used"
                        }
                    }
                },
                "fel_chamber": {
                    "type": "object",
                    "description": "FEL chamber",
                    "properties": {
                        "pressure": {
                            "type": "object",
                            "description": "Pressure",
                            "properties": {
                                "value": {
                                    "type": "string"
                                },
                                "unit": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "comments": {
                    "type": "string",
                    "description": "Comments"
                }
            }
        },
        "cryo_system_status": {
            "title": "Cryo-system status",
            "type": "object",
            "openBISType": "JSON",
            "description": "Cryo-system status",
            "properties": {
                "temperature": {
                    "type": "object",
                    "description": "Temperature",
                    "properties": {
                        "value": {
                            "type": "string"
                        },
                        "unit": {
                            "type": "string"
                        }
                    }
                },
                "liquid_helium": {
                    "type": "object",
                    "description": "Liquid Helium",
                    "properties": {
                        "value": {
                            "type": "string"
                        },
                        "unit": {
                            "type": "string"
                        }
                    }
                },
                "liquid_nytrogen_refill_date": {
                    "type": "string",
                    "description": "Liquid Nytrogen refill date",
                    "openBISType": "TIMESTAMP",
                    "format": "date-time"
                }
            }
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "cangasbottles": {
            "type": "array",
            "items": {
                "$ref": "./cangasbottle.schema.json"
            },
            "description": "Details about the CANgas bottles"
        },
        "errors": {
            "type": "array",
            "items": {
                "$ref": "./errors.schema.json"
            },
            "description": "Details about the occurred errors"
        },
        "maintenance": {
            "type": "array",
            "items": {
                "$ref": "./maintenance.schema.json"
            },
            "description": "Details about the performed maintenance during tip time"
        },
        "instrument": {
            "$ref": "./instrument.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "description"]
}
