{
    "@context": {
        "schema": "http://schema.org/",
        "type": "@type",
        "name": "schema:name",
        "address": "schema:address",
        "description": "schema:description"
    },
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/institution.schema.json",
    "title": "Institution",
    "openBISCode": "INST",
    "description": "Institution",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "const": "schema:Organization"
        },
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "description": {
            "title": "Description",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Description"
        },
        "address": {
            "title": "Address",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Address"
        }
    },
    "additionalProperties": false,
    "required": ["name", "address"]
}
