{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/uhvcomponent.schema.json",
    "title": "UHV Component",
    "openBISCode": "UHVCOMP",
    "description": "UHV Component",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Name"
        },
        "uhv_component_type": {
            "title": "UHV component type",
            "type": "string",
            "openBISType": "CONTROLLEDVOCABULARY",
            "enum": ["Pump", "Evaporator", "Analyser", "Gauge", "Ion/Photon stage", "Storage", "Gas panel", "Port/Valve", "Manipulator/Wobble stick", "Cryostat", "SPM", "Electronics", "Various"],
            "description": "The type of the UHV component"
        },
        "empa_id": {
            "title": "Empa ID",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Empa ID (given by Empa to expensive objects)"
        },
        "model": {
            "title": "Model",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "The model of the UHV component"
        },
        "serial_number": {
            "title": "Serial number",
            "type": "string",
            "openBISType": "VARCHAR",
            "description": "Serial number"
        },
        "receive_date": {
            "title": "Received date",
            "type": "string",
            "openBISType": "DATE",
            "description": "Received date",
            "format": "date"
        },
        "comments": {
            "title": "Comments",
            "type": "string",
            "openBISType": "MULTILINE_VARCHAR",
            "description": "Comments"
        },
        "manufacturer": {
            "$ref": "./manufacturer.schema.json"
        }
    },
    "additionalProperties": false,
    "required": ["name", "uhv_component_type", "serial_number", "empa_id"]
}
